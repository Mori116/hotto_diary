<h1>マイページ</h1>
<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>登録情報</h3>
      <table>
        <tr>
          <th>お名前</th>
          <td><%= @user.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム（あだ名）</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
    </div>
  </div>
    <%= link_to "編集する", edit_user_path(@user.id), class: "btn btn-success" %>
</div>

<div class="container">
  <div class="row">
    <div class="col-6">
      <h3>通知一覧</h3>
        <% if @notifications.exists? %>
          <%= render 'public/notifications/notification', notifications: @notifications %>
        <% else %>
          <p>通知はありません</p>
        <% end %>
        <%= paginate @notifications %>
    </div>
  </div>
    <%= link_to "交換日記へ", join_groups_user_path(@user.id), class: "btn btn-primary" %>
</div>