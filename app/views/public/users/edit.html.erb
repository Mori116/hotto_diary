<div class="container">
  <h1>ユーザ情報編集</h1>
  <div class="row">
    <div class="mx-auto">
      <%= form_with model: @user, local: true do |f| %>

        <div><%= f.label "お名前" %></div>
        <div class="field">
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
        </div>

        <div><%= f.label "フリガナ" %></div>
        <div class="field">
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム（あだ名）" %>
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email %>
        </div>

        <div class="actions">
          <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
        </div>
      <% end %>
      <p>
        <%= link_to "退会する", quit_user_path(@user), class: "btn btn-secondary" %>
        <%= link_to "マイページへ戻る", user_path(@user), class: "btn btn-primary" %>
      </p>
    </div>
  </div>
</div>