<div class="container">
  <h2 class="page-title">ユーザ情報編集</h2>
  <div class="row">
    <div class="mx-auto mt-5">

      <%= form_with model: @user, local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
        <table>
          <tbody>
            <tr>
              <td>
                <%= f.label "お名前" %>
                <%= f.label :last_name, "(姓)" %>
              </td>
              <td><%= f.text_field :last_name, size: 30 %></td>
              <td><%= f.label :first_name, "(名)", class: "mx-2" %></td>
              <td><%= f.text_field :first_name, size: 30 %></td>
            </tr>
            <tr>
              <td>
                <%= f.label "フリガナ" %>
                <%= f.label :last_name_kana, "(セイ)" %>
              </td>
              <td><%= f.text_field :last_name_kana, size: 30 %></td>
              <td><%= f.label :first_name_kana, "(メイ)", class: "mx-2" %></td>
              <td><%= f.text_field :first_name_kana, size: 30 %></td>
            </tr>
            <tr>
              <td><%= f.label :nickname, "ニックネーム（あだ名）" %></td>
              <td><%= f.text_field :nickname, size: 30 %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, size: 30 %></td>
            </tr>
          </tbody>
        </table>

        <div class="offset-4 mt-3">
          <%= f.submit "変更内容を保存する", class: "btn btn-orange" %>
        </div>
      <% end %>

      <p class="mt-5">
        <%= link_to "退会する", quit_user_path(@user), class: "btn btn-danger mr-2" %>
        <%= link_to "マイページへ戻る", user_path(@user), class: "btn btn-secondary" %>
      </p>
    </div>
  </div>
</div>