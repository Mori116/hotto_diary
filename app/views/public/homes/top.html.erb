<div class="top-visual">
  <h2 class="top-title">ほっとダイアリーへようこそ。</h2>
  <div class="main-visual"></div>
</div>

<% if admin_signed_in? %>
  <div class="container">
    <div class="d-flex">
      <h2>お知らせ</h2>
      <%= link_to "新規作成", new_admin_news_path, class: "btn btn-success mb-3 ml-4" %>
    </div>

    <div class="row">
      <div class="col-4">
        <table class="table table-bordered">
          <tbody>
            <% @news.each do |news| %>
              <tr>
                <td>
                  <%= news.created_at.strftime('%Y/%m/%d') %>
                  <%= link_to news.body, edit_admin_news_path(news) %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

<% else %>
  <div class="container">
    <h2>お知らせ</h2>
    <div class="row">
      <div class="col-6">
        <table class="table">
          <tbody>
            <% @news.each do |news| %>
              <tr><%= news.created_at.strftime('%Y/%m/%d') %></tr>
              <tr><%= news.body %></tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="col-6">
        <p>
          新規登録済の方はこちら<br>
          <%= link_to "ログインする", new_user_session_path, class: "btn btn-success" %>
        </p>
        <p>
          未登録の方はこちら<br>
          <%= link_to "新規登録する", new_user_registration_path, class: "btn btn-primary" %>
        </p>
      </div>
    </div>
  </div>
<% end %>
