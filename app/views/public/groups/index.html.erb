<div class="container">
    <h1>グループ検索</h1>
  <div class="row">

    <%= form_with url: search_path, method: :get, local: true do |f| %>
      グループ名 <%= f.text_field :name %>
      <%= f.submit "検索", class: "btn btn-sm btn-success" %>
    <% end %>

    <h3>全グループ一覧</h3>
    <%= link_to "グループを新規作成する", new_group_path, class: "btn btn-success" %>

    <table class="table">
      <thead>
        <th>作成日</th>
        <th>グループ名</th>
        <th>参加人数</th>
        <th></th>
      </thead>
      <tbody>
        <% @groups.each do |group| %>
          <tr>
            <td><%= group.created_at.strftime('%Y/%m/%d') %></td>
            <td><%= group.name %></td>
            <td><%= group.users.count %></td>
            <td><%= link_to "詳細へ", group_path(group), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @groups %>
  </div>
</div>
