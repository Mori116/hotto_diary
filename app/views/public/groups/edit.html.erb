<div class="container">
  <h2 class="page-title">グループ編集</h2>
  <div class="row">
    <div class="mx-auto mt-5">

      <%= form_with model: @group, local: true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
        <table>
          <tr>
            <td><%= f.label :name, "グループ名", class: "mr-2" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :image, "グループ画像", class: "my-2 mr-2" %></td>
            <td><%= f.attachment_field :image, class: "my-2" %></td>
          </tr>
        </table>

        <%= f.submit "変更内容を保存する", class: "btn btn-orange mt-3" %>
        <%= link_to "グループ詳細へ戻る", group_path(@group), class: "btn btn-secondary mt-3 ml-2" %>
      <% end %>

      <div class="mt-3">
        <%= link_to "削除する", group_path(@group), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %>
        <p class="small">※投稿した日記が閲覧できなくなります。</p>
      </div>
    </div>
  </div>
</div>