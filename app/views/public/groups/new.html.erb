<div class="container">
  <h2 class="page-title">グループ作成</h2>
  <div class="row">
    <div class="mx-auto mt-5">

      <%= form_with model: @group, local: true do |f| %>
      <%= render 'layouts/errors', obj: @group %>
        <table>
          <tr>
            <td><%= f.label :name, "グループ名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :image, 'グループ画像', class: "my-2" %></td>
            <td><%= f.attachment_field :image, class: "my-2" %></td>
          </tr>
          <tr>
            <td><%= f.label :password, "パスワード（6文字以上）" %></td>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>
          <tr>
            <td><%= f.label :password_confirmation, "パスワード（確認用）" %></td>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password", class: "my-2" %></td>
          </tr>
        </table>

        <%= f.submit '作成する', class: 'btn btn-orange offset-4' %>
        <%= link_to "戻る", :back, class: "btn btn-secondary ml-3" %>
      <% end %>

    </div>
  </div>
</div>