<div class="container">
    <h1>グループ編集</h1>
  <div class="row">
    <div class="mx-auto">

      <%= form_with model: @group, local: true do |f| %>
        <table>
          <tr>
            <td><%= f.label :name, "グループ名" %></td>
            <td><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td><%= f.label :image, "グループ画像" %></td>
            <td><%= f.attachment_field :image %></td>
          </tr>
        </table>
        <%= f.submit "変更内容を保存する", class: "btn btn-success mt-2" %>
      <% end %>

      <p class="my-2">
        <%= link_to "グループ詳細へ戻る", admin_group_path(@group), class: "btn btn-primary" %>
      </p>
      <p>
        <%= link_to "削除する", admin_group_path(@group), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %><br>
        ※投稿した日記も同時に削除されます。
      </p>
    </div>
  </div>
</div>