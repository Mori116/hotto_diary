<div class="container">
  <h2>グループ詳細</h2>

    <div class="row mt-5">
      <div class="col-md-6 text-md-right">
        <%= attachment_image_tag @group, :image, size: "250x200", fallback: "no_image.jpg" %>
      </div>
      <div class="col-md-6">
        <div class="mt-3 mt-md-0">グループ名：<%= @group.name %></div>
        <div class="my-3">参加人数：<%= @group.users.size %></div>
        <div>グループ作成者：<%= @group.owner.nickname %></div>
        <div class="mt-3">グループ作成日：<%= @group.created_at.strftime('%Y/%m/%d') %></div>
      </div>
    </div>

    <div class="row">
      <div class="d-flex mx-auto mt-5">
        <%= link_to "削除する", admin_group_path(@group), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %><br>
        <%= link_to "交換日記へ", admin_group_diaries_path(@group), class: "btn btn-primary ml-3" %>
      </div>
    </div>

</div>