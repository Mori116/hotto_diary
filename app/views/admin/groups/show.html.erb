<div class="container">
  <h2>グループ詳細</h2>
  <div class="row">
    <div class="mx-auto d-flex mt-5">

      <div class="col-6">
        <%= attachment_image_tag @group, :image, size: "250x200", fallback: "no_image.jpg" %>
      </div>

      <div class="col-6">
        <table class="table-space">
          <tr>
            <td class="col-5">作成日</td>
            <td class="col-3"><%= @group.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <td class="col-5">グループ名</td>
            <td class="col-3"><%= @group.name %></td>
          </tr>
          <tr>
            <td class="col-5">参加人数</td>
            <td class="col-3"><%= @group.users.count %></td>
          </tr>
          <tr>
            <td class="col-5">グループ作成者</td>
            <td class="col-3"><%= @group.owner.nickname %></td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="d-flex mx-auto mt-5">
      <%= link_to "削除する", admin_group_path(@group), method: :delete, class: 'btn btn-danger', "data-confirm" => "本当に消しますか？" %><br>
      <%= link_to "交換日記へ", admin_group_diaries_path(@group), class: "btn btn-primary ml-3" %>
    </div>
  </div>

</div>