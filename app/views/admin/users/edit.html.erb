<div class="container">
  <h2>ユーザ詳細</h2>
  <div class="row">
    <div class="mx-auto mt-5">

      <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>
        <table>
          <tbody>
            <tr>
              <td>
                <%= f.label "お名前" %>
                <%= f.label :last_name, "(姓)" %>
              </td>
              <td><%= f.text_field :last_name, size: 30 %></td>
              <td><%= f.label :first_name, "(名)", class: "mx-2" %></td>
              <td><%= f.text_field :first_name, size: 30 %></td>
            </tr>
            <tr>
              <td>
                <%= f.label "フリガナ" %>
                <%= f.label :last_name_kana, "(セイ)" %>
              </td>
              <td><%= f.text_field :last_name_kana, size: 30 %></td>
              <td><%= f.label :first_name_kana, "(メイ)", class: "mx-2" %></td>
              <td><%= f.text_field :first_name_kana, size: 30 %></td>
            </tr>
            <tr>
              <td><%= f.label :nickname, "ニックネーム（あだ名）" %></td>
              <td><%= f.text_field :nickname, size: 30 %></td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td><%= f.email_field :email, size: 30 %></td>
            </tr>
          </tbody>
        </table>

        <div class="offset-3 mt-2">
          <%= f.radio_button :is_deleted, :false %>有効
          <%= f.radio_button :is_deleted, :true %>退会
        </div>

        <div class="offset-3 mt-3">
          <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
          <%= link_to "戻る", :back, class: "btn btn-secondary ml-3" %>
        </div>
      <% end %>
    </div>
  </div>
</div>