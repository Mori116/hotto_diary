<div class="container">
  <h2>ユーザ詳細</h2>
  <div class="row">
    <div class="mx-auto">

      <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
      <%= render 'layouts/errors', obj: @user %>

        <div><%= f.label "名前" %></div>
        <div class="field">
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name %>
          <%= f.label :first_name, "(名)" %>
          <%= f.text_field :first_name %>
        </div>

        <div><%= f.label "フリガナ" %></div>
        <div class="field">
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana %>
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana %>
        </div>

        <div class="field">
          <%= f.label :nickname, "ニックネーム（あだ名）" %>
          <%= f.text_field :nickname %>
        </div>

        <div class="field">
          <%= f.label :email, "メールアドレス" %>
          <%= f.email_field :email %>
        </div>

        <div class="field">
          <%= f.radio_button :is_deleted, :false %>有効
          <%= f.radio_button :is_deleted, :true %>退会
        </div>

        <div class="actions">
          <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
        </div>
      <% end %>
      <p>
        <%= link_to "戻る", :back, class: "btn btn-secondary" %>
      </p>
    </div>
  </div>
</div>