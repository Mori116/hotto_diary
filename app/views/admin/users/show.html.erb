<div class="container">
  <h2>ユーザ詳細</h2>
  <div class="row">

    <table>
      <tr>
        <th>お名前</th>
        <td><%= @user.full_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
      </tr>
      <tr>
        <th>ニックネーム（あだ名）</th>
        <td><%= @user.nickname %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>

    <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
    <%= link_to "所属グループ一覧", join_groups_admin_user_path(@user.id), class: "btn btn-success" %>

  </div>
</div>