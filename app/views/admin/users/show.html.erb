<div class="container">
  <h2>ユーザ詳細/所属グループ一覧</h2>
  <div class="row">
    <div class="col-6 mt-5">

      <h3>登録情報</h3>
      <table class="table table-bordered bg-light">
        <tr>
          <th>お名前</th>
          <td><%= @user.full_name %></td>
        </tr>
        <tr>
          <th>フリガナ</th>
          <td><%= @user.last_name_kana %><%= @user.first_name_kana %></td>
        </tr>
        <tr>
          <th>ニックネーム（あだ名）</th>
          <td><%= @user.nickname %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @user.email %></td>
        </tr>
      </table>
      <%= link_to "編集する", edit_admin_user_path(@user.id), class: "btn btn-success" %>
    </div>

    <div class="col-6 mt-5">
      <h3>所属グループ一覧</h3>
      <table class="table table-bordered bg-light">
        <thead class="table-head">
          <th>作成日</th>
          <th>グループ名</th>
          <th>参加人数</th>
          <th></th>
        </thead>

        <tbody>
          <% @groups.each do |group| %>
            <tr>
              <td><%= group.created_at.strftime('%Y/%m/%d') %></td>
              <td><%= group.name %></td>
              <td><%= group.users.count %></td>
              <td class="align-middle text-center"><%= link_to "交換日記へ", admin_group_diaries_path(group), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>