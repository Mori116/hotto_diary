<div class="container">
  <h2>お知らせ編集</h2>
  <div class="row">
    <div class="mx-auto">

      <%= form_with model: @news, url: admin_news_path, local: true do |f| %>
      <%= render 'layouts/errors', obj: @news %>
        お知らせ内容 <%= f.text_field :body %>
        <p class="mt-3">
          <%= f.submit "変更内容を保存する", class: "btn btn-success" %>
          <%= link_to "削除する", admin_news_path(@news), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
        </p>
      <% end %>
        <p><%= link_to "戻る", :back, class: "btn btn-secondary" %></p>

    </div>
  </div>
</div>
