<div class="container">
  <h2>お知らせ編集</h2>
    <div class="row">
      <div class="mx-auto mt-5">

        <%= form_with model: @news, url: admin_news_path, local: true do |f| %>
          <%= render 'layouts/errors', obj: @news %>

          <div class="d-flex align-items-start">
            お知らせ内容
            <%= f.text_area :body, class: "form-control ml-3 p-1", size: "30x3" %>
          </div>
          <div class="d-flex offset-3 mt-3">
            <%= f.submit "変更内容を保存する", class: "btn btn-success mr-3" %>
            <%= link_to "削除する", admin_news_path(@news), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
          </div>
        <% end %>

        <p class="offset-3 mt-3">
          <%= link_to "戻る", :back, class: "btn btn-secondary" %>
        </p>

      </div>
    </div>
</div>
