<div class="container">
    <h2>日記詳細</h2>

  <div class="row">
    <%= @diary.title %>
  </div>

  <div class="row">
    <%= attachment_image_tag @diary, :image, size: "250x200", fallback: "no_image.jpg" %>
    <%= @diary.body %>
  </div>

  <div class="row">
      <p><%= link_to "編集する", edit_admin_group_diary_path(@diary), class: "btn btn-primary" %></p>
      <p><%= link_to "削除する", admin_group_diary_path(@diary), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %></p>
  </div>

  <div class="row">
    <% @diary_comments.each do |diary_comment| %>
      <%= diary_comment.comment %>
      <%= link_to "削除する", admin_group_diary_diary_comment_path(diary_comment.diary, diary_comment), method: :delete, class: "btn btn-danger" %>
    <% end %>
  </div>

</div>