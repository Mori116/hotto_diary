<div class="container">
  <h2>新規登録</h2>
  <div class="row">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div><%= f.label "お名前" %></div>
      <div class="field">
        <%= f.label :last_name, "(姓)" %>
        <%= f.text_field :last_name, autofocus: true %>
        <%= f.label :first_name, "(名)" %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>

      <div><%= f.label "フリガナ" %></div>
      <div class="field">
        <%= f.label :last_name_kana, "(セイ)" %>
        <%= f.text_field :last_name_kana, autofocus: true %>
        <%= f.label :first_name_kana, "(メイ)" %>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :nickname, "ニックネーム（あだ名）" %>
        <%= f.text_field :nickname, autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :email, "メールアドレス" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :password, "パスワード（6文字以上）" %>
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "パスワード（確認用）" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
    <p>
      既に登録済みの方<br>
      <%= link_to "こちら", user_session_path %> からログインしてください。
    </p>
</div>
