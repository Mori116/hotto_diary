<div class="container">
  <h2 class="page-title">新規登録</h2>

    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="row mt-5">
        <div class="col-md-4 text-md-right">
          <%= f.label "お名前" %>
        </div>
        <div class="col-md-3">
          <%= f.label :last_name, "(姓)" %>
          <%= f.text_field :last_name, autofocus: true, :placeholder => "例）令和", class: "mb-3 ml-md-3 form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.label :first_name, "(名)", class: "ml-md-2" %>
          <%= f.text_field :first_name, autofocus: true, :placeholder => "例）太郎", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text-md-right">
          <%= f.label "フリガナ" %>
        </div>
        <div class="col-md-3">
          <%= f.label :last_name_kana, "(セイ)" %>
          <%= f.text_field :last_name_kana, autofocus: true, :placeholder => "例）レイワ", class: "mb-3 ml-md-3 form-control" %>
        </div>
        <div class="col-md-3">
          <%= f.label :first_name_kana, "(メイ)" %>
          <%= f.text_field :first_name_kana, autofocus: true, :placeholder => "例）タロウ", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text-md-right">
          <%= f.label :nickname, "ニックネーム（あだ名）", class: "mb-3" %>
        </div>
        <div class="col-md-4">
          <%= f.text_field :nickname, autofocus: true, :placeholder => "例）タロー", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text-md-right">
          <%= f.label :email, "メールアドレス" %>
        </div>
        <div class="col-md-4">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "例）sample@gmail.com", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text-md-right">
          <%= f.label :password, "パスワード（6文字以上）" %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-4 text-md-right">
          <%= f.label :password_confirmation, "パスワード（確認用）" %>
        </div>
        <div class="col-md-4">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mb-3 ml-md-3 form-control" %>
        </div>
      </div>

      <div class="row">
        <div class="col-md-2 mx-auto mt-3">
          <%= f.submit "新規登録", class: "btn btn-orange px-5" %>
        </div>
      </div>
    <% end %>

    <div class="row">
      <p class="col-md-6 offset-md-2 mt-5">
        既に登録済みの方<br>
        <%= link_to "こちら", user_session_path %> からログインしてください。
      </p>
    </div>

</div>
